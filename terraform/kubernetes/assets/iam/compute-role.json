{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Resource": "*",
      "Effect": "Allow",
      "Action": [
        "ec2:DescribeInstances",
        "ec2:DescribeTags",
        "ec2:DescribeRouteTables",
        "ec2:DescribeVpcs",
        "ec2:DescribeRouteTables",
        "ec2:CreateRoute",
        "ec2:DeleteRoute",
        "ec2:AttachVolume",
        "ec2:DetachVolume",
        "ec2:ModifyInstanceAttribute",
        "autoscaling:Describe*",
        "elasticloadbalancing:DescribeLoadBalancers"
      ]
    },{
      "Resource": "arn:aws:kms:${aws_region}:${aws_account}:key/${kms_master_id}",
      "Effect": "Allow",
      "Action" : [
        "kms:Decrypt"
      ]
    },{
      "Resource": "arn:aws:s3:::${secrets_bucket_name}/compute/*",
      "Effect": "Allow",
      "Action": [
        "s3:Get*"
      ]
    },{
      "Resource": "arn:aws:s3:::${secrets_bucket_name}/common/*",
      "Effect": "Allow",
      "Action": [
        "s3:Get*"
      ]
    },{
      "Resource": "arn:aws:s3:::${secrets_bucket_name}/manifests/compute/*",
      "Effect": "Allow",
      "Action": [
        "s3:Get*"
      ]
    },{
      "Resource": "arn:aws:s3:::${secrets_bucket_name}",
      "Effect": "Allow",
      "Action": [
        "s3:List*"
      ]
    }
  ]
}
